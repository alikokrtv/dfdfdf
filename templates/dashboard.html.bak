{% extends "layout.html" %}

{% block title %}Dashboard - DÖF Yönetim Sistemi{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Dashboard</h1>
    <a href="{{ url_for('dof.create_dof') }}" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i> Yeni DÖF Oluştur
    </a>
</div>

<!-- Durum Kartları -->
<div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Toplam DÖF</h6>
                        <h3 class="mb-0">{{ status_counts.total }}</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-clipboard-list fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Devam Eden</h6>
                        <h3 class="mb-0">{{ status_counts.in_progress }}</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-spinner fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Çözüldü</h6>
                        <h3 class="mb-0">{{ status_counts.resolved }}</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card dashboard-card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Reddedildi</h6>
                        <h3 class="mb-0">{{ status_counts.rejected }}</h3>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="fas fa-times-circle fa-2x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Son Eklenen DÖF'ler -->
    <div class="col-md-8 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Son Eklenen DÖF'ler</h5>
                    <a href="{{ url_for('dof.list_dofs') }}" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Durum</th>
                                <th>Oluşturulma</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if recent_dofs %}
                                {% for dof in recent_dofs %}
                                <tr>
                                    <td>{{ dof.id }}</td>
                                    <td>{{ dof.title }}</td>
                                    <td>
                                        {% if dof.status == 0 %}
                                            <span class="badge bg-secondary">Taslak</span>
                                        {% elif dof.status == 1 %}
                                            <span class="badge bg-info">Gönderildi</span>
                                        {% elif dof.status == 2 %}
                                            <span class="badge bg-primary">İncelemede</span>
                                        {% elif dof.status == 3 %}
                                            <span class="badge bg-info">Atandı</span>
                                        {% elif dof.status == 4 %}
                                            <span class="badge bg-warning">Devam Ediyor</span>
                                        {% elif dof.status == 5 %}
                                            <span class="badge bg-success">Çözüldü</span>
                                        {% elif dof.status == 6 %}
                                            <span class="badge bg-dark">Kapatıldı</span>
                                        {% elif dof.status == 7 %}
                                            <span class="badge bg-danger">Reddedildi</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ dof.created_at.strftime('%d.%m.%Y') }}</td>
                                    <td>
                                        <a href="{{ url_for('dof.detail', dof_id=dof.id) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Henüz DÖF bulunmamaktadır</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bildirimleri -->
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Son Bildirimler</h5>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    {% if notifications %}
                        {% for notification in notifications %}
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <p class="mb-1">{{ notification.message }}</p>
                            </div>
                            <small class="text-muted">{{ notification.created_at.strftime('%d.%m.%Y %H:%M') }}</small>
                            {% if notification.dof_id %}
                                <a href="{{ url_for('dof.detail', dof_id=notification.dof_id) }}" class="btn btn-sm btn-link float-end">Görüntüle</a>
                            {% endif %}
                        </div>
                        {% endfor %}
                    {% else %}
                        <div class="list-group-item text-center">
                            <p class="mb-0">Okunmamış bildiriminiz bulunmamaktadır</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Size Atanan DÖF'ler -->
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">Size Atanan DÖF'ler</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if assigned_dofs %}
                                {% for dof in assigned_dofs %}
                                <tr>
                                    <td>{{ dof.id }}</td>
                                    <td>{{ dof.title }}</td>
                                    <td>
                                        {% if dof.status == 0 %}
                                            <span class="badge bg-secondary">Taslak</span>
                                        {% elif dof.status == 1 %}
                                            <span class="badge bg-info">Gönderildi</span>
                                        {% elif dof.status == 2 %}
                                            <span class="badge bg-primary">İncelemede</span>
                                        {% elif dof.status == 3 %}
                                            <span class="badge bg-info">Atandı</span>
                                        {% elif dof.status == 4 %}
                                            <span class="badge bg-warning">Devam Ediyor</span>
                                        {% elif dof.status == 5 %}
                                            <span class="badge bg-success">Çözüldü</span>
                                        {% elif dof.status == 6 %}
                                            <span class="badge bg-dark">Kapatıldı</span>
                                        {% elif dof.status == 7 %}
                                            <span class="badge bg-danger">Reddedildi</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ url_for('dof.detail', dof_id=dof.id) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Size atanmış DÖF bulunmamaktadır</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Departman DÖF'leri (Departman Yöneticileri için) -->
    {% if current_user.role == 3 and current_user.department_id %}
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h5 class="mb-0">Departman DÖF'leri</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if department_dofs %}
                                {% for dof in department_dofs %}
                                <tr>
                                    <td>{{ dof.id }}</td>
                                    <td>{{ dof.title }}</td>
                                    <td>
                                        {% if dof.status == 0 %}
                                            <span class="badge bg-secondary">Taslak</span>
                                        {% elif dof.status == 1 %}
                                            <span class="badge bg-info">Gönderildi</span>
                                        {% elif dof.status == 2 %}
                                            <span class="badge bg-primary">İncelemede</span>
                                        {% elif dof.status == 3 %}
                                            <span class="badge bg-info">Atandı</span>
                                        {% elif dof.status == 4 %}
                                            <span class="badge bg-warning">Devam Ediyor</span>
                                        {% elif dof.status == 5 %}
                                            <span class="badge bg-success">Çözüldü</span>
                                        {% elif dof.status == 6 %}
                                            <span class="badge bg-dark">Kapatıldı</span>
                                        {% elif dof.status == 7 %}
                                            <span class="badge bg-danger">Reddedildi</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ url_for('dof.detail', dof_id=dof.id) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Departmanınıza ait DÖF bulunmamaktadır</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
